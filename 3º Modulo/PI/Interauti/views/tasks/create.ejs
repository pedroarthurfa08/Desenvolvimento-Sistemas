<%- include('../partials/header') %>

<div class="container mt-4 page-transition">
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    <% } %>
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Nova Tarefa</h4>
                </div>
                <div class="card-body">
                    <form action="/tasks" method="POST">
                        <div class="mb-3">
                            <label for="title" class="form-label">Título</label>
                            <input type="text" class="form-control input" id="title" name="title" required minlength="3" maxlength="100" data-tooltip="Digite um título para sua tarefa">
                            <div class="form-text">O título deve ter entre 3 e 100 caracteres</div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Descrição</label>
                            <textarea class="form-control input" id="description" name="description" rows="3" maxlength="500" data-tooltip="Adicione detalhes sobre sua tarefa"></textarea>
                            <div class="form-text">A descrição pode ter até 500 caracteres</div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="priority" class="form-label">Prioridade</label>
                                    <select class="form-select input" id="priority" name="priority" data-tooltip="Selecione a prioridade da tarefa">
                                        <option value="baixa">Baixa</option>
                                        <option value="média" selected>Média</option>
                                        <option value="alta">Alta</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="date" class="form-label">Data</label>
                                    <input type="date" class="form-control input" id="date" name="date" data-tooltip="Selecione a data de vencimento">
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="time" class="form-label">Hora</label>
                                    <input type="time" class="form-control input" id="time" name="time" data-tooltip="Selecione o horário">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="duration" class="form-label">Duração (minutos)</label>
                            <input type="number" class="form-control input" id="duration" name="duration" min="0" data-tooltip="Tempo estimado para completar a tarefa">
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Salvar
                            </button>
                            <a href="/tasks" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Ajuda</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6 class="card-subtitle mb-2 text-muted">Prioridade</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <span class="badge bg-danger me-2">Alta</span>
                                Tarefas urgentes que precisam ser feitas imediatamente
                            </li>
                            <li class="mb-2">
                                <span class="badge bg-warning me-2">Média</span>
                                Tarefas importantes mas não urgentes
                            </li>
                            <li class="mb-2">
                                <span class="badge bg-info me-2">Baixa</span>
                                Tarefas que podem esperar
                            </li>
                        </ul>
                    </div>

                    <div class="mb-3">
                        <h6 class="card-subtitle mb-2 text-muted">Data e Hora</h6>
                        <p class="card-text">
                            <i class="fas fa-calendar-alt text-primary me-2"></i>
                            Quando a tarefa deve ser realizada
                        </p>
                    </div>

                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">Duração</h6>
                        <p class="card-text">
                            <i class="fas fa-hourglass-half text-primary me-2"></i>
                            Tempo estimado para completar a tarefa
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 